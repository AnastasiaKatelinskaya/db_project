{% extends 'admin/index.html.twig' %}
{% block body %}
    <div class="row">

        <div class="col-6">
            <h3>Изменение информации</h3>
            {{ form_start(form) }}
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Загрузить</span>
                </div>
                <div class="custom-file">
                    {{ form_row(form.image, {attr: {class: 'custom-file-input'} }) }}
                    {#                    <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">#}
                    <label class="custom-file-label" for="inputGroupFile01">Загрузите изображение</label>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Введите название продукта(кратко)</label>
                {{ form_row(form.name, {attr: {class: 'form-control'} }) }}
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Выберите категорию к которой относится продукт</label>
                {{ form_row(form.categories, {attr: {class: 'form-control'} }) }}
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Введите описание продукта(Опишите продукт)</label>
                {#                <textarea id="products_content" name="content" required="required" class="form-control" >{{ products.content }}</textarea>#}
                {{ form_row(form.content, {attr: {class: 'form-control'} }) }}
            </div>



            {{ form_row(form.submit, {attr: {class: 'btn btn-primary'} }) }}
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
{% block button %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"></h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <button type="button" class="btn btn-sm btn-outline-secondary"><a href="/admin/products/addProducts">Добавить</a></button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <span data-feather="calendar"></span>
            This week
        </button>

    </div>

</div>
{% endblock %}